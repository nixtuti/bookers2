<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model: @user do |f| %>
          <div class="form-group">
            <%= f.label :user_name, "Name" %>
            <%= f.text_field :user_name %>
          </div>
          <div class="form-group">
            <%= f.label :user_profile_image, "Image" %>
            <%= f.file_field :user_profile_image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <%= f.label :user_introduction, "Introduction" %>
            <%= f.text_area :user_introduction %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update User'%>
          </div>
        <% end %>  
      </div>
    </div>
  </div>
</main>