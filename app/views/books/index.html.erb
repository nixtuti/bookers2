<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%=image_tag %>
        <table class="table">
          
        </table>
        <div class="row">
          
        </div>
        <h2 class="mt-3">New Book</h2>
        <%= form_with model: @book do |f|@%>
          <div class="form-group">
            <%= f.label :title, "Title"%>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <%= f.label, :body, "Opinion"%>
            <%= f.text_field :body %>
          </div>
          <div class="form-group">
            <%= f.submit 'Create Book' %> 
          </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class=""table table-hover table-inverse>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= image_tag %>
              </td>
              <td>
                <%= link_to book.title %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>  
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="max-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>